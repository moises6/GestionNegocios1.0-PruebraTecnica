@model GestionNegocios_PruebraTecnica.Models.Negocio

@{
    ViewData["Title"] = "Crear Negocio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Crear Negocio</h1>
    <h4>Detalles del Negocio</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Negocio</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Escriba el nombre del negocio">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" placeholder="Describa el negocio" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaCreacion" class="control-label">Fecha de Creación</label>
                    <input asp-for="FechaCreacion" type="date" class="form-control">
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Crear</button>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
