@model GestionNegocios_PruebraTecnica.Models.Negocio

@{
    ViewData["Title"] = "Eliminar Negocio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Eliminar Negocio</h1>
    <h3 class="text-danger">¿Está seguro de que desea eliminar este negocio?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <h4>Detalles del Negocio</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4">Fecha de Creación:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar este negocio permanentemente?');">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </form>
        </div>
    </div>
</div>
