@model IEnumerable<GestionNegocios_PruebraTecnica.Models.Negocio>

@{
    ViewData["Title"] = "Lista de Negocios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Negocios</h1>
    <div class="mb-4">
        <a asp-action="Create" class="btn btn-success">Crear nuevo negocio</a>
    </div>
    <form asp-controller="Negocios" asp-action="Index" method="get" class="mb-4">
        <div class="form-group">
            <label for="Buscar">Buscar Negocios:</label>
            <input type="text" name="search" class="form-control" placeholder="Ingrese nombre del negocio...">
            <button type="submit" class="btn btn-primary mt-2">Buscar</button>
        </div>
    </form>
    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
