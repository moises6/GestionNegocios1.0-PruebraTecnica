@model GestionNegocios_PruebraTecnica.Models.ItemMenu

@{
    ViewData["Title"] = "Eliminar Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Eliminar Item</h1>
    <p class="lead">¿Está seguro de que desea eliminar este elemento?</p>
    <div class="card mt-3">
        <div class="card-body">
            <h4 class="card-title">Información del Item</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-4">Categoría ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoriaId)</dd>

                <dt class="col-sm-4">Precio:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-4">Negocio ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NegocioId)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('¿Está seguro de que quiere eliminar este elemento?');">
            Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
