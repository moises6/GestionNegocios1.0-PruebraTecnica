@model ClaimsViewModel
@{
    ViewData["Title"] = "ManageRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input asp-for="@Model.User.Id" hidden />
    <section class="card shadow border-0 mt-4">
        <header class="card-header bg-success bg-gradient m-lg-0 py-3">
            <h2 class="text-white text-center py-2 m-0">Administrador de Permisos de Usuarios</h2>
        </header>
        <div class="card-body p-4">
            <div class="form-group">
                <label class="col-12">Nombre Usuario</label>
                <div class="col-md-12">
                    <input asp-for="User.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-12">Usuario Correo</label>
                <div class="col-md-12">
                    <input asp-for="User.Email" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group mt-3 p-2 border rounded">
                <span>Asignación de Roles</span>
                @for (int i = 0; i < Model.ClaimsList.Count; i++)
                {
                    <div class="m-2 form-check">
                        <input asp-for="@Model.ClaimsList[i].ClaimType" hidden />
                        <input asp-for="@Model.ClaimsList[i].IsSelected" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="@Model.ClaimsList[i].IsSelected">
                            @Model.ClaimsList[i].ClaimType
                        </label>
                    </div>
                }
            </div>
            <div class="form-group row justify-content-between mt-4">
                <div class="col-auto">
                    <a class="btn btn-secondary" asp-action="Index">Salir</a>
                </div>
                <div class="col-md-6 offset-md-3">
                    <input type="submit" class="btn btn-success w-100" value="Actualizar" />
                </div>
            </div>
        </div>
    </section>
</form>


